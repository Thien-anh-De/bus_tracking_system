FROM python:3.11-slim

WORKDIR /app

# CÃ i thÆ° viá»‡n há»‡ thá»‘ng cho psycopg2
RUN apt-get update \
    && apt-get install -y libpq-dev gcc \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

